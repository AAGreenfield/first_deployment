<%- include('header') -%>

<div class="container-lg text-center">
    <h1 class="display-2 mt-5 mb-5 text-center">Test Deployment</h1>
</div>

<div class="container-lg">        
    <div class="row justify-content-center text-center">
        <div class="col-12 col-md-6">
            <form action="/login" method="POST">
                <label for="contact-name" class="form-label">Username:</label>              
                    <div class="input-group mb-1">
                        <span class="input-group-text">           
                            <i class="bi bi-person-fill"></i>
                        </span>                
                        <input type="text" class="form-control" id="contact-name" name="username" placeholder="e.g. ExampleUser69">             
                    </div>
            
                <label for="password" class="form-label mt-4">Password:</label> 
                             
                    <div class="mb-1 input-group">
                        <span class="input-group-text">
                            <i class="bi bi-key-fill"></i>
                        </span>
                        <input type="password" class="form-control" name="password" placeholder="e.g. P@55w0rd"> 
                    </div>
                    <button type="submit" id="submitButton"class="btn btn-outline-primary mt-3">Submit</button>
            </form>
        </div>
    </div>
</div>

<%- include('footer') -%>